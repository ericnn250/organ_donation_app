<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDoctor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4edit_doctor"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/relLayout1edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:padding="10dp">

            <TextView
                android:id="@+id/broadcast_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Doctor Info"
                android:textColor="@color/Black"
                android:textSize="18sp" />



            <EditText
                android:id="@+id/input_doctornameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/broadcast_title1"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="Names..."
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/input_doctor_emailedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctornameedit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="Doctor Email..."
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/input_doctor_contactedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctor_emailedit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="Doctor Contact..."
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/input_doctor_hospitaledit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctor_contactedit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="Doctor Hospital or clinic..."
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/input_doctor_hospital_adresedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctor_hospitaledit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="address of hospital or clinic..."
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/input_doctor_provinceedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctor_hospital_adresedit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="Province..."
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/input_districtedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_doctor_provinceedit"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border"
                android:gravity="start"
                android:hint="District"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btn_doctor_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_districtedit"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/grey_border"
                android:text="SAVE" />


        </RelativeLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4edit_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_border_bottom"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/red1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>