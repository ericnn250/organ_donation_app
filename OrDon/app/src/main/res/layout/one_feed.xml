<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_border_bottom"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/textView_feed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:background="@drawable/curved_transplaent_bg"
        android:layout_below="@+id/textView_feed_name"
        android:id="@+id/textView_feed_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="When people are damaging the environment,
             it is because they don’t have the facts, or haven’t considered
            a particular course of action. Share this app with" />



    <TextView
        android:layout_below="@+id/textView_feed_message"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textView_feed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 feb 2020" />
</RelativeLayout>